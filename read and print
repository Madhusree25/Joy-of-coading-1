#include <stdio.h>
int main()
{
    char a1[6]={'M','T','W','T','F','S'};
    int a2[6],i,n=6;
    float a3[6];
    printf("enter the daily wages of Mr.Int:");
    for(i=0;i<n;i++)
    scanf("%d",&a2[i]);
    
    printf("enter the daily wages of Mr.Float:");
    for(i=0;i<n;i++)
    scanf("%f",&a3[i]);
    printf("\nthe daily wages of Mr.Int is:\n");
    for(i=0;i<n;i++)
    {
        printf("%c=%d\n",a1[i],a2[i]);
    }
    printf("\nthe daily wages of Mr.Float is:\n");
    for(i=0;i<n;i++)
    {
        printf("%c=%f\n",a1[i],a3[i]);
    }
    printf("\nthe daily wages of Mr.Int in reverse order:\n");
    for(i=5;i>=0;i--)
    {
        printf("%c=%d\n",a1[i],a2[i]);
    }
    printf("\nthe daily wages of Mr.Float in reverse order:\n");
    for(i=5;i>=0;i--)
    {
        printf("%c=%f\n",a1[i],a3[i]);
    }
    return 0;
}
output:
enter the daily wages of Mr.Int:560 660 590 760 480 960
enter the daily wages of Mr.Float:97.50 66.0 79.25 76.55 98.45 96.40

